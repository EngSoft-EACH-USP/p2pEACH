<div >
  <div >
    <%= form_with(model: [@anuncio, @comment]) do |f| %>
      <%= f.hidden_field :parent_id %>
      <div >
       <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label 'Reply' %>
        <%= f.text_area :body %>
      </div>
      <%= f.submit 'Submit' %>
      <%= link_to 'Cancel', anuncio_path(@anuncio) %>
    <% end %>
  </div>
</div>